{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build with clang++",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++17",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": { "kind": "build", "isDefault": true },
        "problemMatcher": ["$gcc"]
      },
      {
        "label": "build and run",
        "type": "shell",
        "command": "bash",
        "args": [
          "-c",
          "clang++ -std=c++17 -g ${file} -o ${fileDirname}/${fileBasenameNoExtension} && ${fileDirname}/${fileBasenameNoExtension}"
        ],
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  